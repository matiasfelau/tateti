<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Jugador"
        android:layout_width="170dp"
        android:layout_height="36dp"
        android:layout_marginStart="175dp"
        android:layout_marginEnd="178dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/Ganador"
        android:layout_width="153dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.699" />

    <Button
        android:id="@+id/botonCentro"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.384" />

    <Button
        android:id="@+id/botonSuperiorIzquierda"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="12dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/botonSuperiorCentral"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonCentroIzquierda"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/botonCentro"
        app:layout_constraintTop_toBottomOf="@+id/botonSuperiorIzquierda" />

    <Button
        android:id="@+id/botonSuperiorDerecha"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="172dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toEndOf="@+id/botonSuperiorCentral"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonInferiorCentral"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="12dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonCentro" />

    <Button
        android:id="@+id/botonInferiorDerecha"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toEndOf="@+id/botonInferiorCentral"
        app:layout_constraintTop_toBottomOf="@+id/botonCentroDerecha"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/botonCentroDerecha"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/botonCentro"
        app:layout_constraintTop_toBottomOf="@+id/botonSuperiorDerecha" />

    <Button
        android:id="@+id/botonSuperiorCentral"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="168dp"
        android:layout_marginBottom="12dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/botonCentro"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botonInferiorIzquierda"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/botonInferiorCentral"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonCentroIzquierda" />

</androidx.constraintlayout.widget.ConstraintLayout>